# Hound version: <%= scope.lookupvar('hound::version') %>
#
[Unit]
Description=Hound daemon
Wants=basic.target
After=basic.target network.target

[Service]
User=<%= scope.lookupvar('hound::user') %>
Group=<%= scope.lookupvar('hound::group') %>
ExecStart=<%= scope.lookupvar('hound::bin_dir') %>/houndd \
-conf <%= scope.lookupvar('hound::conf_dir') %>/config.json \
-root=$HOUND_ROOT \
-addr=<%= scope.lookupvar('hound::host') %>:<%= scope.lookupvar('hound::port') %>
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure
RestartSec=42s

[Install]
WantedBy=multi-user.target
